    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_NowLocation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.085"
        android:background="@drawable/tv_rounded"
        android:textColor="@color/darkgray"
        android:gravity="center"
        android:text="현재 위치 불러오기"
        android:textSize="20sp"
        android:fontFamily="@font/suncheonr"
        android:textStyle="bold"/>

    <com.naver.maps.map.MapView
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintVertical_bias="0.45"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_latlng"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintVertical_bias="0.9"
        android:background="@color/tranceparent"
        android:gravity="center"
        android:text="동네 설정 완료"
        android:fontFamily="@font/suncheonr"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/blue"/>


