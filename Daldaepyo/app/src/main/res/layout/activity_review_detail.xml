<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_review_store"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/suncheonr"
        android:gravity="center_vertical"
        android:text="식당이름"
        android:textColor="@color/darkgray"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7" />


    <ImageView
        android:id="@+id/btn_thumbup"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_thumb_up"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintRight_toLeftOf="@+id/tv_thumbup_count"
        app:layout_constraintWidth_percent="0.1" />

    <view
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_review_writer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_thumbup_count"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/suncheonr"
        android:gravity="center_vertical"
        android:text="0"
        android:textColor="@color/orange"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.1" />

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suncheonr"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginTop="25dp"
        android:layout_marginStart="6dp"
        android:text="여기는 리뷰 적는 곳 입니둥~"
        android:textColor="@color/darkgray"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_review_writer" />

    <ImageView
        android:id="@+id/img_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_review_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.254" />

    <TextView
        android:id="@+id/tv_review_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suncheonr"
        android:gravity="center_vertical"
        android:text="작성자"
        android:textColor="@color/deepgray"
        android:textSize="15sp"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/tv_review_store"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

