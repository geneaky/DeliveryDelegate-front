<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp">


        <TextView
            android:id="@+id/tv_review_user_store"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/suncheonr"
            android:gravity="center_vertical"
            android:text="식당이름"
            android:textColor="@color/darkgray"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent="0.6" />


        <TextView
            android:id="@+id/tv_review_user_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/suncheonr"
            android:lineSpacingMultiplier="1.5"
            android:text="여기는 리뷰 적는 곳 입니둥~"
            android:textColor="@color/darkgray"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_user_writer"
            app:layout_constraintWidth_percent="0.5" />

        <ImageView
            android:id="@+id/img_review_user"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:maxWidth="100dp"
            android:maxHeight="120dp"
            android:scaleType="fitCenter"
            android:transitionName="imgTran"
            app:layout_constraintBottom_toTopOf="@+id/btn_thumbup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.025" />

        <TextView
            android:id="@+id/tv_review_user_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/suncheonr"
            android:gravity="center_vertical"
            android:text="작성자"
            android:textColor="@color/deepgray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_user_store" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_review_delete"
            android:src="@drawable/ic_trash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"/>







    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>