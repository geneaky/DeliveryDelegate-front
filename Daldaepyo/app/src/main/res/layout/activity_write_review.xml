<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tv_write_review"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.1"
        android:background="@color/white"
        android:textColor="@color/darkgray"
        android:gravity="center"
        android:text="리뷰 작성"
        android:textSize="20sp"
        android:fontFamily="@font/suncheonr"
        android:textStyle="bold"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.002"
        app:layout_constraintVertical_bias="0.15"
        android:background="@color/deepgray"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/edt_review"
        android:fontFamily="@font/suncheonr"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.27"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.4"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/img_review"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintDimensionRatio="1"
        android:visibility="invisible"
        app:layout_constraintVertical_bias="0.73"
        app:layout_constraintHorizontal_bias="0.1"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_load_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/tranceparent"
        android:text="사진 업로드"
        android:fontFamily="@font/suncheonr"
        android:textColor="@color/darkgray"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.2"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_sendReview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintHorizontal_bias="0.8"
        android:background="@color/tranceparent"
        android:textColor="@color/blue"
        android:fontFamily="@font/suncheonr"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="등록"/>

</androidx.constraintlayout.widget.ConstraintLayout>