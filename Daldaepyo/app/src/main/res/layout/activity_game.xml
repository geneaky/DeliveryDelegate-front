<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="참가인원"
        android:id="@+id/tv_text"
        android:gravity="center"
        android:textColor="@color/darkgray"
        app:layout_constraintBottom_toTopOf="@+id/tv_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="NotSibling" />

    <ListView
        android:id="@+id/delegator_list_view"
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_text"
        app:layout_constraintHeight_percent="0.85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintWidth_percent="1"
        tools:ignore="NotSibling" />



    <TextView
        android:id="@+id/please_ready"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tranceparent"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:text="'게임 준비'를 클릭하고 \n방장이 게임을 시작하기 전까지\n 대기해주세요."
        android:textColor="@color/darkgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6"
        android:textSize="18sp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_game_start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintVertical_bias="0.75"
        android:background="@color/tranceparent"
        android:gravity="center"
        android:fontFamily="@font/suncheonr"
        android:text="게임 시작"
        android:textColor="@color/blue"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_game_ready"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintVertical_bias="0.75"
        android:background="@color/tranceparent"
        android:gravity="center"
        android:fontFamily="@font/suncheonr"
        android:text="게임 준비"
        android:textColor="@color/blue"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
