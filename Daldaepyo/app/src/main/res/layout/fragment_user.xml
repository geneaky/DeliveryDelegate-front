<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tv_dong"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.085"
        android:background="@drawable/tv_rounded"
        android:textColor="@color/darkgray"
        android:gravity="center"
        android:text="내 정보"
        android:textSize="20sp"
        android:fontFamily="@font/suncheonr"
        android:textStyle="bold"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/layout1"
        android:background="@drawable/layout_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintVertical_bias="0.12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_user_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHorizontal_bias="0.45"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="@font/suncheonr"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:letterSpacing="0.25"
            android:text="달토끼"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/tv_user_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
            android:layout_marginBottom="4dp"
            android:textSize="20sp"
            android:fontFamily="@font/suncheonr"
            android:layout_marginLeft="10dp"
            android:textColor="@color/deepgray"
            android:text="님" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/layout2_1"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/layout_bottom_right_rounded"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:id="@+id/tv_user_review"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:text="내가 쓴 리뷰"
            android:fontFamily="@font/suncheonr"
            android:gravity="center"
            android:textColor="@color/deepgray"
            android:textSize="17sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_user_review"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.5"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/suncheonr"
            android:text="0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/layout2_2"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        android:background="@drawable/layout_bottom_left_rounded"
        app:layout_constraintWidth_percent="0.5">

        <TextView
            android:id="@+id/tv_user_immunity"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.1"
            android:text="면제권"
            android:fontFamily="@font/suncheonr"
            android:gravity="center"
            android:textColor="@color/deepgray"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_user_immunity"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.4"
            app:layout_constraintHeight_percent="0.5"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/suncheonr"
            android:text="0"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout2_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.4">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view1"
            app:layout_constraintTop_toTopOf="@id/tv_user_location"
            android:background="@color/lightgray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_user_location"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="내 동네 설정하기"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:fontFamily="@font/suncheonr"
            android:textColor="@color/darkgray"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.9"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view2"
            app:layout_constraintTop_toBottomOf="@id/tv_user_location"
            android:background="@color/lightgray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_user_modify"
            app:layout_constraintTop_toBottomOf="@id/tv_user_location"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="내 정보 수정하기"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:fontFamily="@font/suncheonr"
            android:textColor="@color/darkgray"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.9"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view3"
            app:layout_constraintTop_toBottomOf="@id/tv_user_modify"
            android:background="@color/lightgray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_user_notice"
            app:layout_constraintTop_toBottomOf="@id/tv_user_modify"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="공지사항"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:fontFamily="@font/suncheonr"
            android:textColor="@color/darkgray"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.9"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view4"
            app:layout_constraintTop_toBottomOf="@id/tv_user_notice"
            android:background="@color/lightgray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_user_ask"
            app:layout_constraintTop_toBottomOf="@id/tv_user_notice"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="문의하기"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:fontFamily="@font/suncheonr"
            android:textColor="@color/darkgray"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintWidth_percent="0.9"/>

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_user_ask" />


    </androidx.constraintlayout.widget.ConstraintLayout>













</androidx.constraintlayout.widget.ConstraintLayout>