<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/logo"
        android:id="@+id/img_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintWidth_percent="0.7"
        android:scaleType="fitCenter"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/edt_txt_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.6"
        android:background="@drawable/button_rounded"
        android:hint="아이디를 입력하세요"
        android:textSize="12dp"
        android:paddingLeft="10dp"
        android:fontFamily="@font/gimpopeace_regular"

        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/edt_txt_pwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_txt_id"
        android:layout_marginTop="20dp"
        app:layout_constraintHeight_percent="0.06"
        app:layout_constraintWidth_percent="0.6"
        android:background="@drawable/button_rounded"
        android:hint="비밀번호를 입력하세요"
        android:paddingLeft="10dp"
        android:textSize="12dp"
        android:fontFamily="@font/gimpopeace_regular"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_txt_pwd"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.08"
        android:background="@color/tranceparent"
        android:includeFontPadding="true"
        android:text="로그인"
        android:fontFamily="@font/gimpopeace_regular"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="@color/blue"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.05"
        android:background="@color/tranceparent"
        android:includeFontPadding="true"
        android:text="회원가입"
        android:textSize="10dp"
        android:paddingTop="0dp"
        android:textColor="@color/darkgray"/>

</androidx.constraintlayout.widget.ConstraintLayout>